{
  "name": "test-architecture",
  "version": "1.0.0",
  "description": "Professional Hybrid Automation Framework (API & GUI)",
  "main": "index.js",
  "scripts": {
    "test:api": "cypress run --spec 'cypress/e2e/api/**/*'",
    "test:gui": "cypress run --spec 'cypress/e2e/gui/**/*'",
    "test:chrome": "cypress run --browser chrome",
    "test:all": "cypress run --browser chrome",
    "prereport": "rm -rf cypress/reports && mkdir -p cypress/reports",
    "merge:reports": "mochawesome-merge cypress/reports/*.json > cypress/reports/full-report.json",
    "create:html": "marge cypress/reports/full-report.json --reportDir cypress/reports --inline",
    "generate:report": "npm run merge:reports && npm run create:html"
  },
  "devDependencies": {
    "cypress": "^15.9.0",
    "cypress-dotenv": "^2.0.0",
    "dotenv": "^10.0.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2"
  },
  "dependencies": {
    "cypress-tags": "^0.3.0"
  }
}